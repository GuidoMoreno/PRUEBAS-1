/**
 * Funci√≥n helper para escapar HTML y prevenir XSS
 */
function escapeHtml(text) {
  if (typeof text !== 'string') {
    return text;
  }
  const map = {
    '&': '&amp;',
    '<': '&lt;',
    '>': '&gt;',
    '"': '&quot;',
    "'": '&#039;'
  };
  return text.replace(/[&<>"']/g, function(m) { return map[m]; });
}

/**
 * NUEVA FUNCI√ìN: Prueba paso a paso con diagn√≥sticos detallados
 */
function diagnosticarConexionAppSheet() {
  Logger.log("=== DIAGN√ìSTICO DETALLADO DE APPSHEET ===");
  
  // Paso 1: Verificar configuraci√≥n
  Logger.log("1. VERIFICANDO CONFIGURACI√ìN:");
  Logger.log("   - App ID: " + (APPSHEET_APP_ID ? "‚úÖ Presente" : "‚ùå Falta"));
  Logger.log("   - API Key: " + (APPSHEET_API_KEY ? "‚úÖ Presente" : "‚ùå Falta"));
  Logger.log("   - URL Base: " + APPSHEET_BASE_URL);
  
  if (!APPSHEET_APP_ID || !APPSHEET_API_KEY) {
    Logger.log("‚ùå ERROR: Configuraci√≥n incompleta");
    return;
  }
  
  // Paso 2: Probar conexi√≥n b√°sica
  Logger.log("\n2. PROBANDO CONEXI√ìN B√ÅSICA:");
  try {
    const url = `${APPSHEET_BASE_URL}/${APPSHEET_APP_ID}/tables/${TABLA_VENTAS}/Action`;
    
    const payload = {
      "Action": "Read",
      "Properties": {
        "Locale": "es-ES",
        "Timezone": "America/Panama"
      }
    };

    const options = {
      'method': 'POST',
      'headers': {
        'ApplicationAccessKey': APPSHEET_API_KEY,
        'Content-Type': 'application/json'
      },
      'payload': JSON.stringify(payload),
      'muteHttpExceptions': true
    };

    Logger.log("   - URL: " + url);
    Logger.log("   - Payload: " + JSON.stringify(payload));
    
    const response = UrlFetchApp.fetch(url, options);
    const responseCode = response.getResponseCode();
    const responseText = response.getContentText();
    
    Logger.log("   - C√≥digo de respuesta: " + responseCode);
    Logger.log("   - Respuesta (primeros 500 chars): " + responseText.substring(0, 500));
    
    if (responseCode === 200) {
      Logger.log("‚úÖ CONEXI√ìN EXITOSA");
      const data = JSON.parse(responseText);
      Logger.log("   - Registros encontrados: " + (Array.isArray(data) ? data.length : "No es array"));
      
      if (Array.isArray(data) && data.length > 0) {
        Logger.log("   - Ejemplo de registro: " + JSON.stringify(data[0]));
        Logger.log("   - Columnas disponibles: " + Object.keys(data[0]).join(", "));
      }
    } else {
      Logger.log("‚ùå ERROR HTTP " + responseCode);
      Logger.log("   - Respuesta completa: " + responseText);
    }
    
  } catch (error) {
    Logger.log("‚ùå EXCEPCI√ìN: " + error.toString());
  }
  
  Logger.log("\n=== FIN DEL DIAGN√ìSTICO ===");
}

/**
 * Funci√≥n para probar una venta espec√≠fica con diagn√≥sticos
 */
function probarVentaEspecifica(idVenta = "V001") {
  Logger.log("=== PROBANDO VENTA ESPEC√çFICA: " + idVenta + " ===");
  
  try {
    // M√©todo 1: Con selector
    Logger.log("\n1. PROBANDO M√âTODO CON SELECTOR:");
    const venta1 = obtenerVentaPorID(idVenta);
    if (venta1) {
      Logger.log("‚úÖ Venta encontrada con selector: " + JSON.stringify(venta1));
    } else {
      Logger.log("‚ùå No se encontr√≥ la venta con selector");
    }
    
    // M√©todo 2: Sin selector (obtener todas y filtrar)
    Logger.log("\n2. PROBANDO M√âTODO ALTERNATIVO:");
    const venta2 = obtenerVentaPorIDAlternativo(idVenta);
    if (venta2) {
      Logger.log("‚úÖ Venta encontrada con m√©todo alternativo: " + JSON.stringify(venta2));
    } else {
      Logger.log("‚ùå No se encontr√≥ la venta con m√©todo alternativo");
    }
    
    // Probar detalles si se encontr√≥ la venta
    if (venta1 || venta2) {
      Logger.log("\n3. PROBANDO DETALLES DE LA VENTA:");
      const detalles = obtenerDetallesPorVentaID(idVenta);
      if (detalles && detalles.length > 0) {
        Logger.log("‚úÖ Detalles encontrados: " + detalles.length + " items");
        Logger.log("   - Primer detalle: " + JSON.stringify(detalles[0]));
      } else {
        Logger.log("‚ùå No se encontraron detalles para la venta");
      }
    }
    
  } catch (error) {
    Logger.log("‚ùå ERROR GENERAL: " + error.toString());
    Logger.log("   Stack: " + error.stack);
  }
  
  Logger.log("\n=== FIN DE PRUEBA DE VENTA ESPEC√çFICA ===");
}

/**
 * Funci√≥n de prueba principal que ejecuta todos los diagn√≥sticos
 */
function ejecutarDiagnosticoCompleto() {
  Logger.log("üîç INICIANDO DIAGN√ìSTICO COMPLETO DE APPSHEET");
  Logger.log("=".repeat(50));
  
  // Ejecutar diagn√≥sticos en orden
  diagnosticarConexionAppSheet();
  
  Logger.log("\n" + "=".repeat(50));
  
  probarVentaEspecifica("V001"); // Cambiar por un ID que sepas que existe
  
  Logger.log("\nüèÅ DIAGN√ìSTICO COMPLETO FINALIZADO");
  Logger.log("Revise los logs anteriores para identificar el problema espec√≠fico.");
}
